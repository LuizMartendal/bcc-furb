{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/CG_Biblioteca.csproj",
        "/property:GenerateFullPaths=true"
      ],
      "problemMatcher": "$msCompile"
    },
    { // TODO: precisa?
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/CG_Biblioteca.csproj"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}